extends layout 

block content 
  div(class="bg-cyan-800 w-fit mx-auto mt-4 py-4 px-8 rounded-md")#adminCodeContainer
    h1(class="text-center my-4 text-2xl text-gray-100")= title 
    form(method="POST" action="")
      div(class="flex flex-col items-center my-4 bg-cyan-800")
        label(for="admin_code")
        input#admin_code(type="text" name="admin_code" required="true" class="text-gray-800")
        button(type="submit" class="py-4 px-8 bg-teal-700 mt-4 rounded-md") Submit
  if errors
    ul 
      for error in errors
        li= error.msg